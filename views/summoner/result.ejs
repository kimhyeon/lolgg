<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>TEST</title>
  <link rel='stylesheet' href='/stylesheets/common.css'/>
</head>
<body>
  <div class="b-wrap">
    <%- include('../component/gnb.ejs') %>
    <%- include('../component/menu.ejs') %>

    <div class="b-container">
      <div class="summoner-layout">
        <div class="header">
          <div class="past-rank">
            <ul class="past-rank__list">

            </ul>
          </div>
          <div class="face">
            <div class="border-image"></div>
            <img src="https://avatar.leagueoflegends.com/KR/알리오올리오.png" alt="profile-icon">
            <span class="level"></span>
          </div>
        </div>
      </div>
    </div>

    <button id="refresh" style="padding:15px;position:absolute;top:100px;" data-summoner-id="<%=summonerId%>">전적갱신</button>
  
    <%= summoner %>
    
  </div>

</body>

<script>
let button = document.getElementById("refresh");
button.addEventListener("click", (e) =>{
  console.warn(e.target.dataset.summonerId, e);
  fetch("/summoner/ajax/renew.json/", {
    method: 'POST',
    headers: {
      'Accept': 'application/json',
      'Content-Type': 'application/json'
    },
    body: JSON.stringify({summonerId: e.target.dataset.summonerId})
  })
  .then((res) => {
    console.warn(res);
  })
  .catch((err) => {
    console.error(err);
  });
});
</script>

</html>